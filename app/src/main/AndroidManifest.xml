<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.weatherlive.darkskyweather">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".utils.ArrowPay"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeatherData"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">

        <activity
            android:name=".activity.MoreAppsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WeatherData.NoActionBar.status.black" />
        <activity
            android:name=".activity.PrivacyPolicesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WeatherData.NoActionBar.status.black" />

        <activity
            android:name=".activity.AboutUsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WeatherData.NoActionBar.status" />

        <activity
            android:name=".activity.GetLocationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WeatherData.NoActionBar.status.black" />

        <activity
            android:name=".activity.PrefrencesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WeatherData.NoActionBar.status.black" />

        <activity
            android:name=".activity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WeatherData.NoActionBar.status" />

        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WeatherData.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value= "ca-app-pub-3940256099942544~3347511713" />


    </application>

</manifest>